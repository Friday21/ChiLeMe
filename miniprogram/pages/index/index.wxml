<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <!-- Dinner List Section -->
    <view class="dinner-list">
      <!-- Add Dinner Button -->
      <button class="add-dinner-btn" bindtap="onAddDinner">
        <image class="add-dinner-icon" src="../assets/addbutton.jpg" mode="aspectFill"></image>
      </button>
      
      <!-- Dinner Items -->
      <block wx:for="{{dinners}}" wx:key="index">
        <view class="dinner-item">
          <image class="dinner-image" src="{{item.imageUrl}}" mode="aspectFill"></image>
          <view class="dinner-info">
            <text class="dinner-time">{{item.time}}</text>
            <text class="dinner-location">{{item.location}}</text>
            <view class="dinner-health">
              <text>健康指数: </text>
              <van-rate value="{{ item.likes }}" />
            </view>
            <view class="dinner-taste">
              <text>好吃指数: </text>
              <van-rate value="{{ item.taste }}" />
            </view>
          </view>
        </view>
      </block>
    </view>
  </view>
</scroll-view>
