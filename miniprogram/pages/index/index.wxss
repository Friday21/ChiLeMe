.scrollarea {
  height: 100%;
  margin: 0;
  padding: 0;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0;
  padding: 0;
}

.userinfo {
  width: 100%;
  padding: 20px;
}

.avatar-wrapper {
  margin-bottom: 10px;
}

.nickname-wrapper {
  display: flex;
  flex-direction: column;
}

.nickname-label {
  margin-bottom: 5px;
}

.nickname-input {
  border: 1px solid #ccc;
  padding: 5px;
}

.usermotto {
  margin: 20px 0;
}

.dinner-list {
  width: 100%;
  padding: 20px;
}

.add-dinner-btn {
  width: 100px;
  height: 100px;
  display: flex;
  justify-content: left;
  align-items: left;
  margin-bottom: 20px;
  background-color: #f0f0f0;
}

.add-dinner-icon {
  margin-top: 20px;
  margin-left: 10px;
  width: 50px;
  height: 50px;
}

.dinner-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  width: 100%;
  height: 250px;
  background-color: #89BD9E;
}

.dinner-left {
  flex: 1;
  margin-top: 5px;
}

.dinner-right {
  flex: 2;
  height: 250px;
  display: flex;
  flex-direction: column;
  margin-left: 30px;
  background-color: #89BD9E;
}

.dinner-image {
  width: 100%;
  height: 250px;
}

.dinner-info {
  padding: 10px;
}

.dinner-time, .dinner-location, .dinner-likes, .dinner-taste {
  margin: 5px 0;
}

.dinner-alias {
  display: flex;
  align-items: center;
  margin-top: 10px;
}

.dinner-alias text {
  margin-left: 10px; /* 在昵称和头像之间添加一些间距 */
}

.avatar {
  border-radius: 20%; /* 将头像变成圆形 */
}
