.container {
  height: 100vh;
  overflow-y: auto;
  padding-bottom: 100rpx;
}

.statistics-container {
  padding: 20rpx;
  margin-top: 40rpx;
  background-color: #f5f5f5;
}

.chart-section {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.chart-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #1989fa;
}

.ucharts {
  width: 100%;
  height: 400rpx;
  display: block;
}

.chart-section text {
  display: block;
  text-align: center;
  margin-top: 20rpx;
}

.info-icon {
  font-size: 28rpx;
  color: #007aff;
  cursor: pointer;
  margin-left: 10rpx;
}

.week-text {
  display: flex;  /* 让子元素排在同一行 */
  align-items: center; /* 让 ℹ️ 和文本对齐 */
  font-size: 28rpx;
  margin-left: 100rpx;
  color: #333;
}