<view class="container">
  <image class="banner" src="../../assets/contributions-banner.jpg" mode="widthFix"></image>

  <!-- Contributing Section -->
  <view class="section">
    <text class="title">How to Contribute</text>
    <view class="description">
      We welcome your ideas and contributions! If you'd like to help improve this app, you can:
      <text class="highlight">Contact us at dongyongli@microsoft.com</text>
      or
      <text class="highlight">Open an issue on our repository</text>
    </view>
  </view>

  <!-- Contributors List -->
  <view class="section">
    <text class="title">Our Amazing Contributors</text>
    <block wx:for="{{contributors}}" wx:key="index">
      <view class="contributor">
        <text class="role">{{item.role}}</text>
        <block wx:for="{{item.names}}" wx:key="name">
          <text class="highlight">{{item.name}}</text>
        </block>
      </view>
    </block>
  </view>

  <!-- Join Us Section -->
  <view class="section">
    <text class="title">Join Our Community</text>
    <text class="description">
      We're excited to have more passionate contributors join our community. Every contribution, big or small, makes a difference. Thank you for your interest and support in making this app better for everyone!
    </text>
  </view>
</view>
