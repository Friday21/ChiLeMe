.about-container {
  padding: 10rpx;
  min-height: 100vh;
  background-color: #fafafa;
}

.header {
  text-align: center;
  padding: 60rpx 0;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.content {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section {
  margin-bottom: 50rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  display: block;
}

.feature-list {
  margin-top: 30rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.feature-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.quote-section {
  text-align: center;
  padding: 40rpx 0;
}

.quote {
  font-size: 32rpx;
  color: #444;
  font-style: italic;
}

.footer {
  text-align: center;
  padding: 50rpx 0 30rpx;
}

.copyright {
  font-size: 24rpx;
  color: #999;
}

.rules-content {
  background-color: #f8f8ff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin: 20rpx 0;
}

.rules-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.8;
  display: block;
  margin-bottom: 16rpx;
}

.rules-text:last-child {
  margin-bottom: 0;
}

.rules-text.highlight {
  color: #4a90e2;
  font-weight: 500;
} 