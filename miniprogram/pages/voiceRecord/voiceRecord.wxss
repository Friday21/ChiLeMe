.voice-input-container {
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #F6F6F6;
  position: fixed;
  bottom: 180rpx;
  left: 0;
  right: 0;
  width: 100%;
  z-index: 10;
  box-sizing: border-box;
}

.button-container {
  width: 90%;
  display: flex;
  gap: 20rpx;
  justify-content: space-between;
}
.voice-btn {
  height: 100rpx !important;
  border-radius: 50rpx !important;
  background: #ffffff !important;
  border: 2rpx solid #1989fa !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  transition: all 0.3s ease !important;
  position: relative !important;
  overflow: hidden !important;
  box-shadow: 0 4rpx 12rpx rgba(25, 137, 250, 0.1) !important;
  flex: 1;
  padding: 0 30rpx !important;
}
.voice-btn:last-child {
  flex: 1;
}
.right-btn {
  flex: 1;
  background: #ffffff !important;
  transition: opacity 0.3s ease !important;
}
.recording + .right-btn {
  opacity: 0 !important;
  pointer-events: none !important;
}
.voice-btn.recording {
  position: fixed !important;
  left: 5% !important;
  right: 5% !important;
  bottom: 180rpx !important;
  width: 90% !important;
  height: 120rpx !important;
  z-index: 100 !important;
  background: linear-gradient(135deg, #1989fa, #1677ff) !important;
  border-color: transparent !important;
  box-shadow: 0 4rpx 16rpx rgba(25, 137, 250, 0.3) !important;
  transform: scale(1.05) !important;
}
.mic-icon {
  position: absolute;
  left: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
  transition: all 0.3s ease;
  z-index: 1;
}
.voice-btn.recording .mic-icon {
  transform: scale(1.1);
  z-index: 1;
}
.btn-text {
  font-size: 32rpx;
  color: #1989fa;
  font-weight: 500;
  transition: all 0.3s ease;
  text-align: center;
  width: 100%;
  position: relative;
  z-index: 0;
}
.voice-btn.recording .btn-text {
  color: #ffffff;
  font-weight: 600;
  z-index: 0;
}
.wave-container {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.wave {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  animation: wave 1.5s infinite;
}
.wave1 {
  animation-delay: 0s;
}
.wave2 {
  animation-delay: 0.5s;
}
.wave3 {
  animation-delay: 1s;
}
@keyframes wave {
  0% {
    transform: scale(0.8);
    opacity: 1;
  }
  100% {
    transform: scale(1.5);
    opacity: 0;
  }
}
.recording-tip {
  color: #ff4d4f;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  font-weight: 500;
  animation: fadeIn 0.3s ease;
}
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
.today-records {
  padding: 20rpx;
  padding-bottom: 280rpx; /* 为底部的录音按钮和导航栏留出空间 */
  padding-top: 30rpx;
  box-sizing: border-box;
  height: 100vh;
  background-color: #f5f7fa;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}
.records-container {
  flex: 1;
  padding: 20rpx;
  padding-bottom: 280rpx;
  padding-top: 30rpx;
  box-sizing: border-box;
  height: 100vh;
  background-color: #f5f7fa;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}
.record-card {
  margin: 0 !important;
  background: #ffffff !important;
  border-radius: 12rpx !important;
  box-shadow: none !important;
  width: 100% !important;
}
.tag-container {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 12rpx;
}
.tag {
  margin: 0 !important;
  font-size: 24rpx !important;
}
.swipe-delete-btn {
  height: 100%;
  width: 65px;
  background-color: #ee0a24;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}
/* 修改van-swipe-cell的样式 */
:host {
  --cell-background-color: transparent;
}
.van-swipe-cell {
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}
.van-cell-group {
  background: transparent !important;
}
/* 确保内容区域宽度正确 */
.van-swipe-cell__left,
.van-swipe-cell__right {
  display: flex;
  align-items: center;
}
.van-swipe-cell__wrapper {
  position: relative;
  width: 100% !important;
}
/* 编辑弹窗样式 */
.edit-dialog {
  border-radius: 16rpx !important;
  overflow: hidden;
}
.dialog-content {
  padding: 30rpx;
}
.dialog-text {
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 30rpx;
  color: #333;
  word-break: break-all;
}
.dialog-item {
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}
.dialog-label {
  min-width: 140rpx;
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
}
.edit-field {
  flex: 1;
  background: #f7f8fa !important;
  border-radius: 8rpx !important;
  padding: 8rpx 16rpx !important;
}
.voice-btn.disabled {
  opacity: 0.5 !important;
  pointer-events: none !important;
  background: #f5f5f5 !important;
  border-color: #dcdee0 !important;
}

.voice-btn.disabled .btn-text {
  color: #999 !important;
}

.voice-btn.disabled .mic-icon van-icon {
  color: #999 !important;
}