.voice-input-container {
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  position: fixed;
  bottom: 120rpx;
  left: 0;
  right: 0;
  width: 100%;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 10;
  box-sizing: border-box;
}

.voice-btn {
  width: 90% !important;
  margin-bottom: 16rpx;
  border-radius: 12rpx !important;
  height: 88rpx !important;
  line-height: 88rpx !important;
}

.recording-tip {
  color: #ff4d4f;
  font-size: 28rpx;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.today-records {
  padding: 20rpx;
  padding-bottom: 280rpx; /* 为底部的录音按钮和导航栏留出空间 */
  padding-top: 30rpx;
  box-sizing: border-box;
  height: 100vh;
  background-color: #f5f7fa;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.records-container {
  flex: 1;
  padding: 20rpx;
  padding-bottom: 280rpx;
  padding-top: 30rpx;
  box-sizing: border-box;
  height: 100vh;
  background-color: #f5f7fa;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.record-card {
  margin: 0 !important;
  background: #ffffff !important;
  border-radius: 12rpx !important;
  box-shadow: none !important;
  width: 100% !important;
}

.tag-container {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 12rpx;
}

.tag {
  margin: 0 !important;
  font-size: 24rpx !important;
}

.swipe-delete-btn {
  height: 100%;
  width: 65px;
  background-color: #ee0a24;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

/* 修改van-swipe-cell的样式 */
:host {
  --cell-background-color: transparent;
}

.van-swipe-cell {
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.van-cell-group {
  background: transparent !important;
}

/* 确保内容区域宽度正确 */
.van-swipe-cell__left,
.van-swipe-cell__right {
  display: flex;
  align-items: center;
}

.van-swipe-cell__wrapper {
  position: relative;
  width: 100% !important;
}

/* 编辑弹窗样式 */
.edit-dialog {
  border-radius: 16rpx !important;
  overflow: hidden;
}

.dialog-content {
  padding: 30rpx;
}

.dialog-text {
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 30rpx;
  color: #333;
  word-break: break-all;
}

.dialog-item {
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.dialog-label {
  min-width: 140rpx;
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
}

.edit-field {
  flex: 1;
  background: #f7f8fa !important;
  border-radius: 8rpx !important;
  padding: 8rpx 16rpx !important;
} 