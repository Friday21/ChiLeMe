.scrollarea {
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo {
  width: 100%;
  padding: 20px;
}

.avatar-wrapper {
  margin-bottom: 10px;
}

.nickname-wrapper {
  display: flex;
  flex-direction: column;
}

.nickname-label {
  margin-bottom: 5px;
}

.nickname-input {
  border: 1px solid #ccc;
  padding: 5px;
}

.usermotto {
  margin: 20px 0;
}

.dinner-list {
  width: 100%;
  padding: 20px;
}

.dinner-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  width: 100%;
  height: 200px;
  background-color: #89BD9E;
}

.dinner-left {
  flex: 1;
  margin-top: 5px;
}

.dinner-right {
  flex: 2;
  height: 200px;
  display: flex;
  flex-direction: column;
  margin-left: 20px;
  background-color: #89BD9E;
}

.dinner-image {
  width: 100%;
  height: 200px;
}

.dinner-info {
  padding: 10px;
}

.dinner-time, .dinner-location, .dinner-likes, .dinner-taste {
  margin: 5px 0;
}