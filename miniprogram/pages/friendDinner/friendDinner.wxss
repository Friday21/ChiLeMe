
.scrollarea {
  height: 100%;
  margin: 0;
  padding: 0;
  overflow: hidden;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin: 0;
  padding: 0;
}

.dinner-list {
  width: 100%;
  padding: 20px;
}

.dinner-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  width: 100%;
  height: 250px;
  background-color: #89BD9E;
}

.dinner-left {
  flex: 1;
  margin-top: 5px;
}

.dinner-right {
  flex: 2;
  height: 250px;
  display: flex;
  flex-direction: column;
  margin-left: 30px;
  background-color: #89BD9E;
}

.dinner-image {
  width: 100%;
  height: 250px;
}

.dinner-info {
  padding: 10px;
}

.dinner-alias {
  margin-top: 10px;
}

.dinner-time, .dinner-location, .dinner-likes, .dinner-taste {
  margin: 5px 0;
}