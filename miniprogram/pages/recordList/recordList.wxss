.records-container {
  flex: 1;
  padding: 30rpx;
  box-sizing: border-box;
  height: 100vh;
  background: #f7f8fa;
  overflow-y: auto;
  margin-top: 50rpx;
  -webkit-overflow-scrolling: touch;
}

.record-card {
  margin: 0 !important;
  border-radius: 24rpx !important;
  box-shadow: none !important;
  margin-top: 20rpx;
  padding: 30rpx !important;
  display: flex !important;
  flex-direction: column !important;
}

/* 五种不同情感值对应的背景色 */
.record-card.mood-1 {
  background: #ffcdd2 !important; /* 特别消极 - 深红色 */
}

.record-card.mood-2 {
  background: #ffe0b2 !important; /* 消极 - 橙色 */
}

.record-card.mood-3 {
  background: #e0dfdf !important; /* 中性 - 灰色 */
}

.record-card.mood-4 {
  background: #c8e6c9 !important; /* 积极 - 浅绿色 */
}

.record-card.mood-5 {
  background: #b3e5fc !important; /* 非常积极 - 浅蓝色 */
}

.tag {
  margin-right: 12rpx;
  margin-top: 30rpx;
  font-size: 24rpx !important;
}

.delete-btn {
  height: 100%;
  background-color: #ff4d4f;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 130rpx;
}

/* 修改van-swipe-cell的样式 */
:host {
  --cell-background-color: transparent;
}

.van-swipe-cell {
  margin-bottom: 12rpx;
  border-radius: 24rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  height: 250rpx;
}

.van-cell-group {
  background: transparent !important;
}

.dialog-content {
  padding: 40rpx 30rpx;
}

.dialog-text {
  font-size: 30rpx;
  line-height: 1.6;
  margin-bottom: 40rpx;
  color: #333;
  word-break: break-all;
}

.dialog-item {
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

.dialog-label {
  min-width: 160rpx;
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.card-wrapper {
  margin-bottom: 12rpx;
}

.card-spacer {
  height: 12rpx;
  background-color: transparent;
}