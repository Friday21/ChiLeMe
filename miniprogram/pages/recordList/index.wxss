.record-list-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
}

.header {
  padding: 20rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.title {
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.records {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.record-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.record-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.record-info {
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.category {
  color: #576b95;
}

.time {
  color: #999;
} 